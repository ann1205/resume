<div class="card my-4">
    <div class="row">
        <div class="col-2 py-4">
            <img src="{{image}}" class="img-fluid rounded-start">
        </div>
        <div class="col-4">
            <h5 class="card-title">{{name}}</h5>
            <p class="card-text">{{description}}</p>
        </div>
        <div class="col-2 py-4">
            <p>{{price/title}}</p>
            <h5 class="card-title">{{price/value}}</h5>
        </div>
        <div class="col-2 py-5">
            <p>{{amount}}</p>
        </div>
        <div class="col-2 my-3">
            {{#each buttons}}
                <button class="btn my-2 {{#if isPrimary}}btn-primary{{/if}} {{#if isDanger}}btn-outline-danger{{/if}}">{{text}}</button>                    
            {{/each}}
        </div>
    </div>
</div>