<main>
    <section>
        {{#with formBlock}}
        <div class="row">
            <div class="col-8">
                <h2>{{header}}</h2>
                {{#with rating}}
                <p>{{title}}: {{value}}</p>
                {{/with}}
                {{#with actionBlock}}
                <div>
                    <ul class="nav nav-tabs">
                        {{#each tabs}}
                        <li class="nav-item">
                            <a class="nav-link {{#if isActive}} active{{/if}}" href="#">{{text}}</a>
                        </li>
                        {{/each}}  
                    </ul>
                </div>
                <hr class="my-5">
                <div class="card">
                    {{#with report}}
                    <p class="p-2 mb-0">{{title}}</p>
                    <div class="col-4 m-2 mt-0">
                    <button class="btn btn-secondary" href="{{button/link}}">{{button/text}}</button>
                    </div>
                    {{/with}}
                </div>
                {{/with}}
                <hr class="my-5">
                {{#with feedbackBlock}}
                    <h3 class="mb-5">{{title}}</h3>                    
                        {{#each buttons}}                            
                            <button class="btn p-1 mx-1 {{#if isWarning}}btn-warning{{/if}} {{#if isSuccess}}btn-success{{/if}} {{#if isDanger}}btn-danger{{/if}}" href="{{link}}">{{text}}</button>                           
                        {{/each}}                    
                {{/with}}        
                <hr class="my-5">
            </div>
            <div class="col-4">
                {{#with goodsInfo}}
                <div class="card">
                    <img src="{{photo}}" width="120px" class="my-3 ms-3">
                    <h5 class="mb-3 ms-3">{{name}}</h5>
                </div>
                <div class="card mt-2">
                    <h5 class="mt-3 mb-1 ms-3">{{price}}</h5>
                    <p class="ms-3">{{#if inMarket}}Є в наявності{{else}}Немає в наявності {{/if}}</p>
                    {{#each buttons}}
                        <div class=" text-start"> 
                        <button class="btn {{#if isPrimary}}btn-primary{{/if}}{{#if isSecondary}}btn-secondary{{/if}} mx-3 mb-3">{{text}}</button>
                        </div> 
                    {{/each}}
                </div>
                {{#with seller}}
                <div class="card mt-2">
                    <p class="py-3 ps-3 mb-0">{{title}}: <strong>{{value}}</strong></p>
                </div>
                {{/with}}
                {{/with}}
            </div>
        </div>
        {{/with}}        
    </section>
    <section>
        {{#each reviewList}}
            {{> reviewItem}}
        {{/each}}                
    </section>
    {{> shopaction}}
    <hr class="mt-5 mb-0">
</main>