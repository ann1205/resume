<main>   
    <section>
    {{#with newsBlock}}
        {{> shoppost}}        
    {{/with}}
    </section>
    <hr class="my-5">
    <section>
        {{#with goodsBlock}}
            {{#with tabs}}
            <ul class="nav nav-tabs mb-5">
                <li class="nav-item">
                    <a class="nav-link
                    {{#if [0].isActive}}active{{/if}}
                    {{#if [0].isDisabled}}disabled{{/if}}">
                    {{[0].text}}
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link
                    {{#if [1].isActive}}active{{/if}}
                    {{#if [1].isDisabled}}disabled{{/if}}">
                    {{[1].text}}
                    </a>
                </li>
