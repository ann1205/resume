                    {{#if [3].isDisabled}}disabled{{/if}}">
                    {{[3].text}}
                    </a>
                </li>
            </ul>
            {{/with}}
            {{#with cards}}
                <div class="row">
                    <div class="col-4 px-0">
                        <div class="card my-3">
                        <img src="{{[0].image}}" class="card-img-top">
                            <div class="card-body">
                                <h5 class="card-title">{{[0].title}}
                                    {{#if [0].isHot}}
                                    <badge class="rounded-pill text-bg-warning text-uppercase">Hot!</badge>
                                    {{/if}}
                                    {{#if [0].isNew}}
                                    <badge class="rounded-pill text-bg-primary">New</badge>
                                    {{/if}}
